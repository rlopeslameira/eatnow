{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2023"],

    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
