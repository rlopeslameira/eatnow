{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    "module": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
